<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/community_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageview_community_picture"
            android:layout_width="121dp"
            android:layout_height="123dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/communityName"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_community_picture"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/communityCategory"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/communityName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:textColor="@color/black" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>